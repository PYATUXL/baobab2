<?php
class Joker extends Card {
      public $value = 21;
    }
    
    $deck = new Deck();
    $hand = new Hand();
    
    // Add Jokers to the deck
    for ($i = 0; $i < 2; $i++) {
        $deck->addCard(new Joker());
    }  
    
    if ($hand->countCards(Joker::class) == 2) {
        echo "You win!";
    } else {
        // Play the game as usual
    }
